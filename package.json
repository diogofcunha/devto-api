{
  "name": "devto-api",
  "version": "0.0.0",
  "description": "A node wrapper around dev.to api",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "prettier:write": "prettier --ignore-path .gitignore --write './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogofcunha/devto-api.git"
  },
  "keywords": [
    "dev.to",
    "api",
    "blog",
    "github",
    "community",
    "dev",
    "eng"
  ],
  "author": "Diogo Cunha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diogofcunha/devto-api/issues"
  },
  "homepage": "https://github.com/diogofcunha/devto-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@threads/tsconfig": "^1.0.0",
    "@types/node": "^12.6.8",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint -t verbose -p .",
      "git add"
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
