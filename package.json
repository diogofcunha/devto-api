{
  "name": "devto-api",
  "version": "0.0.0",
  "description": "A node wrapper around dev.to api",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf lib",
    "postbuild": "rm -rf `find lib -name 'examples'`",
    "lint": "tslint './src/**/*.{ts,tsx}' -t verbose -p .",
    "prettier:write": "prettier --ignore-path .gitignore --write './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogofcunha/devto-api.git"
  },
  "keywords": [
    "dev.to",
    "api",
    "blog",
    "github",
    "community",
    "dev",
    "eng"
  ],
  "author": "Diogo Cunha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diogofcunha/devto-api/issues"
  },
  "homepage": "https://github.com/diogofcunha/devto-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@threads/tsconfig": "^1.0.0",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.6.8",
    "@types/node-fetch": "^2.5.0",
    "husky": "^3.0.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint -t verbose -p .",
      "git add"
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
}
